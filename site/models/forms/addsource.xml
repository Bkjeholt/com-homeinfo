            name="sourcekey"
            type="text"
			description="COM_HOMEINFO_FORM_ADDSOURCE_KEY_DESC"
			label="COM_HOMEINFO_FORM_ADDSOURCE_KEY_LABEL"
			required="true"
			size="16"/>

